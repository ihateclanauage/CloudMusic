/* 歌曲列表样式 */
page{
  height: 100%;
}

#banner{
  height: 280rpx;
}
#banner image{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 9rpx;
}

.list_wrap view{
  float: left;
}
.list_wrap{
  margin-top:  5rpx;
  margin-bottom: 5rpx;
  width: 100%;
  height: 160rpx;
  /* background: pink; */
  padding: 10rpx 0rpx;
  padding-left: 55rpx;
  padding-right: 55rpx;
  box-shadow: 0rpx 1rpx 10rpx #f1f1f1;
}
.list_wrap .list_cover{
  width: 160rpx;
  height: 150rpx;
  /* background: orange; */
}
.list_wrap .list_info{
  width: 310rpx;
  height: 150rpx;
  /* background: skyblue; */
}
.list_wrap .list_play{
  width: 150rpx;
  height: 150rpx;
  /* background: khaki; */
}
.list_cover image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 23px;
}
.list_info view{
  width: 260rpx;
  /* 文本不换行 */
  white-space: nowrap;
  overflow: hidden;
  /* 文本溢出部分省略 */
  text-overflow: ellipsis;
}
.list_info .musicName{
  font-size: 30rpx;
  padding-left: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.list_info .singer{
  font-size : 26rpx;
  color: #555;
  padding-left: 60rpx;
}
.list_play{
  display: flex;
  justify-content: center;
  align-items: center;
}
.list_play image{
  width: 100rpx;
  height: 100rpx;
}
/* 搜索框样式 */
.searchBox{
  width: 85%;
  height: 50rpx;
  background: #e7e0e0;
  margin: 10rpx auto;
  border-radius: 80rpx;
  overflow: hidden;
}
.searchBox .txt{
  width: 80%;
  height: 50rpx;
  /* background: skyblue; */
  padding-left: 10%;
  float: left;
}
.searchBox .btn{
  width: 10%;
  height: 50rpx;
  /* background: yellow; */
  float: right;
  position: relative;
}
.btn text{
  color: #695c5c;
  font-size: 45rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}

/* 五个iconfont标签导航 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240,19,19);
  color: white;
  font-size: 50rpx;
  margin: 15rpx 0;
}

.navItem text{
  font-size: 25rpx;
}

/* 推荐歌曲 */
.recommendContainer {
  padding: 26rpx;
  height: 400rpx;
}

.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  height: 300rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏，省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出隐藏，省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /* 设置对齐 */
  -webkit-line-clamp: 2; /* 设置行数 */
}

/* 排行榜  */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 700rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;

}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
